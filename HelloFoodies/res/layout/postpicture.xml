<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_a_pic_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_gravity="left"
            android:layout_weight="0.33"
            android:src="@drawable/back_btn" />

        <TextView
            android:id="@+id/post_a_pic_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.33"
            android:textSize="@dimen/post_a_pic_text_size"
            android:text="Post a Picture"
            android:textColor="@android:color/darker_gray" />
        
        <ImageView
            android:id="@+id/post_a_pic_done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:contentDescription="@string/app_name"
            android:layout_weight="0.33"
            android:src="@drawable/done_btn" />
          
    </LinearLayout>
    
          <ImageView
            android:id="@+id/post_a_pic__add_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="@dimen/picture_left_margin"
           	android:layout_marginTop="@dimen/picture_top_margin"
          	android:layout_marginRight="@dimen/picture_right_margin"
          	android:src="@drawable/addpic" />
          
          <EditText
            android:id="@+id/post_a_pic_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/typingbar"
            android:textSize="@dimen/post_a_pic_text_size"            
            android:layout_marginLeft="@dimen/picture_left_margin"
            android:layout_marginTop="@dimen/picture_top_margin"
            android:layout_marginRight="@dimen/picture_right_margin"
            android:hint="Add Title"
            android:padding="@dimen/post_a_pic_add_title"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray" />
          
           <EditText
            android:id="@+id/post_a_pic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/typingbar"
            android:textSize="@dimen/post_a_pic_text_size"            
            android:layout_marginLeft="@dimen/picture_left_margin"
            android:layout_marginTop="@dimen/picture_top_margin"
            android:layout_marginRight="@dimen/picture_right_margin"
            android:hint="Location"
            android:padding="@dimen/post_a_pic_add_title"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray" />
           
       <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/picture_top_margin"
        android:orientation="horizontal">
        
            <ImageView
            android:id="@+id/post_a_pic_loved_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="@dimen/picture_left_margin"
          	android:layout_marginRight="@dimen/post_a_pic_margin_cat"
          	android:src="@drawable/loveit" />
                          
                <ImageView
            android:id="@+id/post_a_pic_liked_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
          	android:layout_marginRight="@dimen/post_a_pic_margin_cat"
          	android:src="@drawable/likeit" />
                
                  <ImageView
            android:id="@+id/post_a_pic_its_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
          	android:layout_marginRight="@dimen/post_a_pic_margin_cat"
          	android:src="@drawable/itsok" />
                  
         	       <ImageView
            android:id="@+id/post_a_pic_not_for_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
          	android:layout_marginRight="@dimen/post_a_pic_margin_cat"
          	android:src="@drawable/notforme" />
        
       </LinearLayout>
           
          

</LinearLayout>
